<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/list_style"
    android:paddingLeft="15dp"
    android:paddingTop="12dp"
    android:paddingRight="15dp"
    android:paddingBottom="12dp"
    android:gravity="center"
    android:layout_marginBottom="10dp">


    <ImageView
        android:id="@+id/img_Participant"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_person_style" />

    <TextView
        android:paddingVertical="8dp"
        android:paddingLeft="15dp"
        android:id="@+id/participant_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_Participant"
        android:textColor="@color/white"
        android:textSize="17dp"
        android:textFontWeight="700"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/mic_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_mic_off"
            app:backgroundTint="@color/md_red_400"
            app:fabSize="mini"
            android:layout_marginRight="15dp"
            app:elevation="0dp"
            app:borderWidth="2dp"
            app:pressedTranslationZ="0dp"/>


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/cam_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_video_camera_off"
            app:backgroundTint="@color/md_red_400"
            app:fabSize="mini"
            app:elevation="0dp"
            app:borderWidth="2dp"
            app:pressedTranslationZ="0dp"/>

    </LinearLayout>


</LinearLayout>






